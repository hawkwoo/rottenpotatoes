<h1> Save this movie? </h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :overview %><br />
    <%= f.text_area :overview %>
  </p>
	<p>
		<%= f.label :score %><br />
		<%= f.text_field :score %>
	</p>
  <p>
    <%= f.label :rating %><br />
    <%= f.select :rating, [ 'G', 'PG', 'PG-13', 'R', 'NC-17' ] %>
  </p>
  <p>
    <%= f.label :released_on %><br />
    <%= f.date_select :released_on %>
  </p>
	<p>
		<%= f.label :genres %><br />
		<%= f.text_area :genres %>
	</p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<%= button_to 'Back', '/movies/search' %>


